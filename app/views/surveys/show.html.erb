<h1>Pass the test</h1>

<p>
  Question: <%= @survey.number %> / <%= @survey.total %>
</p>

<b>
  <%= @survey.current_question.body %>
</b>

<%= form_with url: survey_path(@survey), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @survey.current_question.answers, :id, :body, include_hidden: false  do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= form.submit 'Next' %></p>
<% end %>
