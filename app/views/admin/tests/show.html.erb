<p>
  <%= t('.title') %>: <%= @test.title %>
</p>
<p>
  <%= t('.hard') %>: <%= @test.level %>
</p>
<p>
  <%= t('.published') %>: <%= @test.created_at.strftime('%Y-%m-%d %H:%M') %>
</p>
<p>
  <%= t('.timer') %>: <%= @test.timer %>
</p>

<p>
  <%= link_to 'New Question', new_admin_test_question_path(@test) %>
</p>

<table class="table">
  <tr>
    <th>Body</th>
    <th colspan="3">Actions</th>
  </tr>

  <%= render partial: 'admin/questions/question', collection: @test.questions %>
</table>

<%= link_to t('admin.tests.test.edit'), edit_admin_test_path(@test) %>
<%= link_to t('.back'), admin_tests_path %>
