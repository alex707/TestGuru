<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, id: :badge_name %>
  </p>

  <p>
    <%= form.label :icon %><br>
    <%= form.text_field :icon, id: :badge_name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description, id: :badge_description %>
  </p>

  <p>
    <%= form.label :condition %><br>
    <%= form.text_field :condition, id: :badge_condition %>
  </p>

  <p>
    <%= form.label :category_id %><br>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: t('.cat_prompt') %>
  </p>

  <p>
    <%= form.label :level %><br>
    <%= form.text_field :level, id: :badge_level %>
  </p>

  <p><%= form.submit %></p>
<% end %>
