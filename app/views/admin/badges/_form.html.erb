<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, id: :badge_name %>
  </p>

  <p>
    <%= form.label :icon %><br>
    <%= form.text_field :icon, id: :badge_name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description, id: :badge_description %>
  </p>

  <p>
    <%= form.label :rule %><br>
    <%= form.text_field :rule, id: :badge_rule %>
  </p>

  <p>
    <%= form.label :param %><br>
    <%= form.text_field :param, id: :badge_param %>
  </p>

  <p><%= form.submit %></p>
<% end %>
