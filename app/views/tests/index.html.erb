<h1><%= t('.header') %></h1>

<table class="table">
  <thead>
    <tr>
      <th class="sort-by-title pointer">
        <%= t('admin.tests.index.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t('admin.tests.index.count') %></th>
      <th><%= t('admin.tests.show.category') %></th>
      <th><%= t('admin.tests.show.hard') %></th>
      <th><%= t('admin.tests.show.timer') %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.questions.count %></td>
        <td><%= test.category.title %></td>
        <td><%= test.level %></td>
        <td><%= test.timer %></td>
        <td><%= link_to t('.show'), test_path(test), class: 'btn' %></td>
        <td><%= button_to t('.start'), start_test_path(test), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
